{
    "manifest_version": 3,
    "name": "Spontaneous Flashcards",
    "description": "Flashcards out of the blue",
    "version": "1.0",
    "action": {
        "default_popup": "./popup/popup.html"
    },
    "permissions": [
        "storage",
        "tabs",
        "alarms",
        "scripting",
        "unlimitedStorage"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "background": {
        "service_worker": "background.js"
    }
}